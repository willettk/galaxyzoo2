@import "nib"

$sans-serif = "Open Sans", sans-serif

.container
	margin: 0 auto
	width: 960px

.columns
	@extends .container
	clearfix()
	padding: 30px 0 50px 0

	> .column
		box-sizing: border-box
		float: left

		&.narrow
			width: 25%

		&.wide
			padding-left: 20px
			width: 75%

h1
	font-size: 24px
	margin: 0.5em 0 0.15em 0

p, td, li
	font-size: 14px

body
	background: url("../images/background.jpg") no-repeat scroll 50% 0 #000
	color: #f2f2f2
	font-family: $sans-serif

	> .header
		@extends .container
		padding: 95px 0 15px 0
		text-align: center

		ul
			list-style: none

	> .footer
		background: rgba(#fff, 0.1)
		border-top: 1px solid rgba(#fff, 0.2)
		padding: 30px 0

a
	color: lighten(#0079ae, 20%)

	&:hover
		color: lighten(#0079ae, 60%)

table
	width: 100%

	td, th
		padding: 3px 6px

	td
		background: #151515

	.banner, th
		background: rgba(#fff, 0.2)
		font-weight: 700
		text-align: center


.nav-container

	ul
		list-style: none
		padding-left: 15px

		&.nav

			> li
				margin: 0 0 7px 0
	a
		cursor: pointer
		
		&.active
			color: #fff


